<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="54dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="57dp"
                android:layout_height="match_parent"
                android:background="@drawable/btn_profile_back"
                android:text=""
                android:id="@+id/btn_profile_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÁ NHÂN"
                android:textSize="19sp"
                android:textColor="#000000"
                android:id="@+id/textView11"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btn_profile_back"
                android:layout_toEndOf="@+id/btn_profile_back" />

            <Button
                android:layout_width="56dp"
                android:layout_height="match_parent"
                android:text=""
                android:background="@drawable/btn_profile_add"
                android:id="@+id/btn_profile_create"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/img_profile_avatar"
                android:layout_width="107dp"
                android:layout_height="107dp"
                android:scaleType="fitCenter"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="19dp"
                android:background="@drawable/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                />

            <Button
                android:layout_width="95dp"
                android:layout_height="22dp"
                android:background="@drawable/btn_profile_edit"
                android:id="@+id/btn_profile_edit"
                android:layout_below="@+id/img_profile_avatar"
                android:layout_marginTop="11dp"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="5dp"
                android:layout_alignLeft="@+id/img_profile_avatar"
                android:layout_alignStart="@+id/img_profile_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Linh Nguyen"
                android:textSize="19sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_profile_artist"

                android:layout_alignTop="@+id/img_profile_avatar"
                android:layout_toRightOf="@+id/img_profile_avatar"
                android:layout_toEndOf="@+id/img_profile_avatar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="375"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/tv_profile_total_following"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tv_profile_artist"
                android:layout_alignLeft="@+id/tv_profile_artist"
                android:layout_alignStart="@+id/tv_profile_artist" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quan tâm"
                android:textSize="12sp"
                android:id="@+id/textView12"
                android:layout_below="@+id/tv_profile_total_following"
                android:layout_alignLeft="@+id/tv_profile_total_following"
                android:layout_alignStart="@+id/tv_profile_total_following" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:id="@+id/tv_profile_total_followed"
                android:layout_above="@+id/textView12"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toEndOf="@+id/textView12"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="quan tâm bạn"
                android:textSize="12sp"
                android:id="@+id/textView14"
                android:layout_below="@+id/tv_profile_total_followed"
                android:layout_alignLeft="@+id/tv_profile_total_followed"
                android:layout_alignStart="@+id/tv_profile_total_followed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_profile_total_receipt"
                android:layout_above="@+id/textView14"
                android:layout_toRightOf="@+id/textView14"
                android:layout_toEndOf="@+id/textView14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="công thức"
                android:id="@+id/textView13"
                android:textSize="12sp"
                android:layout_below="@+id/tv_profile_total_receipt"
                android:layout_alignLeft="@+id/tv_profile_total_receipt"
                android:layout_alignStart="@+id/tv_profile_total_receipt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logo Designer, Corporate Designer, Fiancé. A nobody telling the world of somebody"
                android:textSize="11sp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:textColor="#000000"
                android:id="@+id/tv_profile_description"
                android:layout_below="@+id/textView12"
                android:layout_alignLeft="@+id/textView12"
                android:layout_alignStart="@+id/textView12" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:weightSum="1"
        android:layout_height="40dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/btn_profile_receipt_press"
                android:id="@+id/btn_profile_receipt" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/btn_profile_album_normal"
                android:id="@+id/btn_profile_album" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:id="@+id/fragment_profile"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></RelativeLayout>
        </LinearLayout>


</LinearLayout>