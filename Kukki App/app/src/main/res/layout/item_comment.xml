<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:weightSum="1"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:paddingRight="50dp"
        android:layout_height="wrap_content">
        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/img_comment_avatar"
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="17dp"
            android:background="@drawable/ic_launcher"
            android:layout_marginTop="7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
        <!--
        <ImageView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:id="@+id/img_comment_avatar"
            android:layout_marginLeft="17dp"
            android:background="@drawable/ic_launcher"
            android:layout_marginTop="7dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
            -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nguyá»…n Linh"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="17sp"
            android:id="@+id/tv_comment_artist"
            android:layout_alignTop="@+id/img_comment_avatar"
            android:layout_toRightOf="@+id/img_comment_avatar"
            android:layout_toEndOf="@+id/img_comment_avatar"
            android:layout_marginLeft="21dp"
            android:layout_marginStart="21dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sieu qua vay"
            android:textSize="14sp"
            android:textColor="#000000"
            android:id="@+id/tv_comment_description"
            android:layout_below="@+id/tv_comment_artist"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/tv_comment_artist"
            android:layout_alignStart="@+id/tv_comment_artist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15/07/2015 16:43"
            android:layout_marginBottom="7dp"
            android:id="@+id/tv_comment_time"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/tv_comment_description"
            android:layout_alignLeft="@+id/tv_comment_description"
            android:layout_alignStart="@+id/tv_comment_description" />
    </RelativeLayout>
</LinearLayout>